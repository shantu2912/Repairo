<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Repairo — Payment</title>

  <style>
    body {
      margin: 0;
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #dff3f7, #f8fbff);
    }

    .container {
      max-width: 480px;
      margin: auto;
      padding: 20px;
      margin-top: 30px;
    }

    .card {
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(14px);
      padding: 24px;
      border-radius: 20px;
      box-shadow: 0 15px 40px rgba(0,0,0,0.08);
    }

    h2 { margin-top: 0; color: #0b6fa4; text-align:center; }
    h3 { margin-bottom: 10px; color:#334155 }

    .summary-row {
      display: flex;
      justify-content: space-between;
      margin: 8px 0;
      font-size: 15px;
    }

    .method {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 14px;
      border: 2px solid #e2e8f0;
      border-radius: 14px;
      margin-top: 12px;
      cursor: pointer;
      transition: .25s;
    }

    .method:hover {
      transform: scale(1.03);
    }

    .method.active {
      border-color: #0284c7;
      background: linear-gradient(135deg,#e0f2fe,#f0f9ff);
      box-shadow: 0 8px 20px rgba(2,132,199,0.15);
    }

    .method img {
      width: 28px;
    }

    .btn {
      width: 100%;
      padding: 14px;
      background: linear-gradient(135deg,#0284c7,#0369a1);
      color: white;
      font-size: 16px;
      font-weight: 600;
      border-radius: 14px;
      border: none;
      cursor: pointer;
      margin-top: 22px;
      transition: .25s;
    }

    .btn:hover { transform: translateY(-2px); }

    /* MODALS */
    .modal {
      position: fixed; inset: 0;
      background: rgba(0,0,0,0.55);
      display: none;
      align-items: center;
      justify-content: center;
    }

    .modal-box {
      background: white;
      padding: 22px;
      border-radius: 18px;
      text-align: center;
      width: 300px;
      animation: pop .3s ease;
    }

    @keyframes pop {
      from { transform: scale(.85); opacity:0 }
      to { transform: scale(1); opacity:1 }
    }

    .qr-image {
      width: 200px;
      margin: 10px auto;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

    .loader {
      border: 4px solid #e2e8f0;
      border-top-color: #0284c7;
      width: 32px; height: 32px;
      border-radius: 50%;
      margin: auto;
      animation: spin 1s linear infinite;
    }

    @keyframes spin { to { transform: rotate(360deg); } }
  </style>
</head>

<body>

<div class="container">
  <div class="card">
    <h2>Complete Payment</h2>

    <h3>Order Summary</h3>
    <div id="summary"></div>

    <h3>Choose Payment Method</h3>

    <div class="method" id="upi">
      <img src="payment.jpeg">
      <span>UPI Apps (GPay / PhonePe / Paytm)</span>
    </div>

    <div class="method" id="card">
      <img src="https://cdn-icons-png.flaticon.com/512/633/633611.png">
      <span>Credit / Debit Card</span>
    </div>

    <button class="btn" id="payBtn">Pay Securely</button>
  </div>
</div>

<!-- QR MODAL -->
<div class="modal" id="qrModal">
  <div class="modal-box">
    <h3>Scan & Pay</h3>
    <img src="myqr.png" class="qr-image">
    <p style="font-size:14px;color:#64748b">Use any UPI app to scan</p>
    <button class="btn" id="simPay">I Have Paid</button>
  </div>
</div>

<!-- LOADING MODAL -->
<div class="modal" id="loadingModal">
  <div class="modal-box">
    <div class="loader"></div>
    <p>Verifying payment...</p>
  </div>
</div>

<script>
let selected = null;

// Load booking
const id = new URLSearchParams(location.search).get("booking");
const all = JSON.parse(localStorage.getItem("repairo_bookings") || "[]");
const bk = all.find(x => x.id === id);
if (!bk) location.href = "home.html";

// Summary
document.getElementById("summary").innerHTML = `
  <div class="summary-row"><strong>Service</strong><span>${bk.service}</span></div>
  <div class="summary-row"><strong>Date</strong><span>${bk.date}</span></div>
  <div class="summary-row"><strong>Visit Charge</strong><span>₹49</span></div>
  <div class="summary-row"><strong>Payable Now</strong><span>₹49</span></div>
`;

// Selecting method
["upi","card"].forEach(m => {
  document.getElementById(m).onclick = () => {
    selected = m;
    document.getElementById("upi").classList.remove("active");
    document.getElementById("card").classList.remove("active");
    document.getElementById(m).classList.add("active");
  };
});

document.getElementById("payBtn").onclick = () => {
  if (!selected) return alert("Please select a payment method.");
  if (selected === "upi") openQR();
  else simulatePayment();
};

function openQR(){
  document.getElementById("qrModal").style.display = "flex";
}

document.getElementById("simPay").onclick = () => {
  document.getElementById("qrModal").style.display = "none";
  simulatePayment();
};

function simulatePayment(){
  document.getElementById("loadingModal").style.display = "flex";

  setTimeout(()=>{
    bk.payment = "Paid";
    bk.status = "assigned";
    localStorage.setItem("repairo_bookings", JSON.stringify(all));
    location.href = "tracking.html?booking=" + bk.id;
  }, 2000);
}
</script>

</body>
</html>